<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="8dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a_registration_item_tv" android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/a_registration_item_tv">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a_registration_item_et" android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="16dp" android:layout_marginRight="8dp" android:layout_weight="1"
            />
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a_registration_item_checkbox"
            android:checked="false" android:layout_weight="0" android:layout_marginRight="8dp"/>
    </LinearLayout>

</RelativeLayout>