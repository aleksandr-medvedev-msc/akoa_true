<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_answerfragment_file_tv" android:layout_gravity="left|center_vertical" android:layout_weight="1"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f_answerfragment_filebutton"
            android:id="@+id/f_answerfragment_file_button" android:layout_gravity="right|center_vertical" android:layout_margin="8dp"
            android:layout_weight="0"/>
</LinearLayout>