<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_answerfragment_item_date_layout1">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/f_answerfragment_item_date_tv" android:layout_gravity="left|center_vertical"
            android:layout_weight="1" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f_answerfragment_datebutton"
            android:id="@+id/f_answerfragment_datebutton" android:layout_gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:layout_weight="0" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/f_answerfragment_item_date_layout1">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_answerfragment_item_date_et" android:layout_alignParentLeft="true" android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            android:editable="false" android:layout_weight="1" android:layout_marginBottom="8dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f_answerfragment_item_date_cb" android:layout_alignRight="@+id/f_answerfragment_item_date_tv"
            android:layout_alignBottom="@+id/f_answerfragment_item_date_et" android:checked="false"
            android:layout_weight="0" android:layout_marginRight="8dp"/>
    </LinearLayout>
</RelativeLayout>