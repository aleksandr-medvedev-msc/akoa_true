<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f_newslistfragment_image" android:layout_gravity="center_horizontal|top" android:layout_margin="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/f_newslistfragment_item_title" android:layout_gravity="center_horizontal|top" android:layout_marginTop="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:layout_marginLeft="8dp"/>
</LinearLayout>