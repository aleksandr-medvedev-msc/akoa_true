<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a_registration_item_with_spinner_tv" android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/a_registration_item_with_spinner_tv">
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/a_registration_spinner" android:layout_gravity="left|center_vertical" android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp" android:spinnerMode="dropdown"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0" android:checked="false"
                android:id="@+id/a_registration_item_with_spinner_checkbox">
        </CheckBox>
    </LinearLayout>
</RelativeLayout>