    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f_orderfragment_lv_item_title" android:layout_gravity="left|center_vertical" android:layout_margin="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f_orderfragment_lv_item_text" android:layout_gravity="left|center_vertical" android:layout_marginLeft="24dp"
